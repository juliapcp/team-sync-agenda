<%- include('../includes/head') %>
    <div class="flex items-center justify-center">
        <div
            class="flex-1 flex flex-col space-y-5 lg:space-y-0 lg:flex-row lg:space-x-10 max-w-6xl sm:p-6 sm:my-2 sm:mx-4 sm:rounded-2xl">
            <div class="flex-1 px-2 sm:px-0">
                <div class="flex justify-between items-center">
                    <h3 class="text-3xl font-extralight text-white/50">Adicionar membro no time <%=time.nome%></h3>

                </div>
                <div class="mb-10 sm:mb-0 mt-10 grid gap-4 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
                    <div class="wrap-login100 p-t-5 p-b-90">
                        <form class="login100-form validate-form flex-sb flex-w"   action="/times/adicionarMembro/<%=time.id%>"
                            method="POST">
                            <table style="width:100%;">
                                <tbody>
                                    <tr>
                                        <td><label class="font-extralight text-white/50" for="nome">Membro: </label></td>
                                    
                                    </tr>
                                    <tr>
                                        <td>
                                            <select id="membros" name="membro"style="width: 100%;">
                                                <% usuarios.forEach(usuario=> { %>
                                                    <option value="<%=usuario.id%>">
                                                        <%=usuario.nome%>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="3">
                                            <button style=" margin-left: 25%;" type="submit"
                                                class="w3-button w3-green">Adicionar</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../includes/footer') %>